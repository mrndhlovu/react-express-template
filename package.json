  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "dev": "rm -rf build && webpack --mode development --config webpack.server.config.js && webpack --mode development --config webpack.dev.config.js",
    "prod": "rm -rf build && webpack --mode production --config webpack.server.config.js && webpack --mode production --config webpack.prod.config.js",
    "start": "node ./build/server.js",
    "heroku-postbuild": "yarn run prod"
  },
  "jest": {
